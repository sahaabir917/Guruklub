<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_16"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="end"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/closewindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_12"
            android:orientation="horizontal"
            android:visibility="visible">


            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_grey" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_6"
                android:background="@color/lightash1" />

            <LinearLayout
                android:id="@+id/profile_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="start"
                android:orientation="horizontal">

                <View
                    android:id="@+id/viewColorBorder"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="match_parent"
                    android:background="@color/bookmarkedHorizontalview"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/bookmark_text_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="7sp"
                    android:padding="5dp"
                    android:text="Edit Profile"
                    android:textColor="#000000"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_6"
                android:background="@color/lightash1" />

            <LinearLayout
                android:id="@+id/resetpasswordlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="start"
                android:orientation="horizontal">


                <View
                    android:id="@+id/viewColorBorder2"
                    android:layout_width="@dimen/dp_3"
                    android:layout_height="match_parent"
                    android:background="@color/shareHorizontalview"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="7sp"
                    android:padding="5dp"
                    android:text="Reset Password"
                    android:textColor="#000000"
                    android:textSize="13sp" />


            </LinearLayout>


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_6"
                android:background="@color/lightash1" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
