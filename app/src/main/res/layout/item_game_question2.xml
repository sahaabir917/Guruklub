<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightAsh">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            app:cardCornerRadius="@dimen/dp_24"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@color/white">

                                <ScrollView
                                    android:id="@+id/scrollView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:fillViewport="true"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingBottom="@dimen/dp_10">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center">

                                            <RelativeLayout
                                                android:id="@+id/title_container"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/colorPrimary"
                                                android:padding="@dimen/dp_12">

                                                <RelativeLayout
                                                    android:id="@+id/title_layout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentTop="true"
                                                    android:layout_toLeftOf="@+id/options_iv">

                                                    <io.github.kexanie.library.MathView
                                                        android:id="@+id/question_title_tv_math"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:lineSpacingExtra="@dimen/sp_5"
                                                        android:scrollbars="none"
                                                        android:textColor="@color/white"
                                                        android:textSize="@dimen/sp_16"
                                                        app:engine="MathJax" />

                                                    <TextView
                                                        android:id="@+id/question_title_tv"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:lineSpacingExtra="@dimen/sp_6"
                                                        android:scrollbars="none"
                                                        android:textColor="@color/white"
                                                        android:textSize="@dimen/sp_16" />

                                                </RelativeLayout>

                                                <ImageView
                                                    android:id="@+id/question_image_iv"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="@dimen/dp_130"
                                                    android:layout_below="@+id/title_layout"
                                                    android:layout_marginTop="@dimen/dp_10"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/ic_profile_banner" />



                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_below="@+id/title_container"
                                                android:padding="@dimen/dp_10">


                                                <LinearLayout
                                                    android:id="@+id/oprion_ll"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginTop="@dimen/dp_30"
                                                    android:gravity="center"
                                                    android:orientation="vertical"
                                                    android:padding="@dimen/dp_10" />

                                                <androidx.appcompat.widget.AppCompatTextView
                                                    android:id="@+id/submit_tv"
                                                    android:layout_width="@dimen/dp_160"
                                                    android:layout_height="@dimen/dp_40"
                                                    android:layout_below="@+id/oprion_ll"
                                                    android:layout_centerHorizontal="true"
                                                    android:layout_marginTop="@dimen/dp_16"
                                                    android:layout_marginBottom="@dimen/dp_16"
                                                    android:background="@drawable/bg_rounded_button_with_ancent1"
                                                    android:gravity="center"
                                                    android:lineSpacingExtra="@dimen/sp_9"
                                                    android:text="Submit"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/buttontextsize"
                                                    android:textStyle="bold" />


                                            </RelativeLayout>


                                        </RelativeLayout>

                                    </LinearLayout>

                                </ScrollView>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>





                </LinearLayout>


            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</layout>