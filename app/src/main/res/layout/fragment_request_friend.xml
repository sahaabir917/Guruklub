<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.friendrequest.RequestFriendFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pending_sent_friend_request_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_pending_sent_friend_request"
            android:layout_marginStart="@dimen/dp_20"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/no_pending_request_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No requests"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/gamepageusertitlecolor"
            android:textAlignment="center"
            android:visibility="gone"
            android:gravity="center_vertical"/>

    </LinearLayout>


</layout>

