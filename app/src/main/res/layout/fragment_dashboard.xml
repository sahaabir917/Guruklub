<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.dashboard.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/home_page_first_row"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:background="@color/home_page_first_row"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/practice_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:background="#df1855"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="@dimen/dp_10"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#df1855">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/practice_icon"/>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/newblack"
                            android:text="Practice"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_game_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:background="#df1855"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="@dimen/dp_10"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/game_background_blue">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/game_icon"/>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/newblack"
                            android:text="Game"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/dp_10"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_live_exam_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:background="#df1855"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="@dimen/dp_10"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_live_exam_background">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/live_exam_png"/>


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/newblack"
                            android:text="Live Exam"/>


                    </RelativeLayout>


                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_model_test_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_model_test_background">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/model_test_png" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Model Test"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_below="@+id/dashboard_model_test_layout"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_11" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_previous_question_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:background="#df1855"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_previous_question_background">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/previous_question_png" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Questions"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_below="@+id/dashboard_previous_question_layout"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_11" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_current_affairs_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:background="#df1855"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_current_affiers">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/current_affiers" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_below="@+id/dashboard_current_affairs_layout"
                            android:text="Current Affairs"
                            android:textAlignment="center"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_11" />


                    </RelativeLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/home_page_first_row"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_library_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_library">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/dashboard_library_png" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="All Subjects"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_11" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_all_video_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:layout_centerInParent="true"
                            android:background="#df1855"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_all_video">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/dashboard_all_video_png" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:text="All Videos"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_11" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_140"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboard_all_question_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_90"
                            android:layout_centerInParent="true"
                            android:background="#df1855"
                            app:cardCornerRadius="@dimen/dp_10">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/dashboard_add_question">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/dashboard_add_question_png" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Questions"
                          android:layout_centerInParent="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/newblack"
                            android:textSize="@dimen/sp_10" />


                    </RelativeLayout>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</layout>

