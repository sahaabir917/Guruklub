<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/colorPrimaryNew"
                    app:layout_constraintTop_toBottomOf="@+id/close_btn_iv" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_close_dialog"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="@drawable/bg_rounded_primarydark">


                    <ImageView
                        android:id="@+id/close_btn_iv_right"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/dp_8"
                        android:src="@drawable/ic_close_icon2"
                        android:text="Clear" />

                </RelativeLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:fontFamily="@font/poppins_bold"
                android:text="You have to login first"
                android:textColor="@color/colorAccentNew"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">



                    <LinearLayout
                        android:id="@+id/cardViewGoogleLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_primary"
                        android:backgroundTint="@color/orange"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/bg_btn_primary"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/dp_3">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                app:srcCompat="@drawable/ic_gmail" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_11"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="Login With Gmail"
                            android:textColor="@color/white"
                            android:textSize="@dimen/buttontextsize"
                            android:textStyle="bold" />

                    </LinearLayout>






                    <LinearLayout
                        android:id="@+id/cardViewFbLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_primary"
                        android:backgroundTint="#243b68"
                        android:gravity="left"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:background="@drawable/bg_btn_primary"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/dp_3">

                            <ImageView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_24"
                                app:srcCompat="@drawable/ic_facebook" />

                        </RelativeLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_11"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="Login With Facebook"
                            android:textColor="@color/white"
                            android:textSize="@dimen/buttontextsize"
                            android:textStyle="bold" />

                    </LinearLayout>


                <LinearLayout
                    android:id="@+id/cardViewRegularLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_green"
                    android:backgroundTint="@color/green"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="@dimen/dp_3">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            app:srcCompat="@drawable/ic_login" />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Login With Others"
                        android:textColor="@color/white"
                        android:textSize="@dimen/buttontextsize"
                        android:textStyle="bold" />

                </LinearLayout>











            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>