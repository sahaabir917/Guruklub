<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:clickable="true"
        tools:context=".view.activity.profile.ErrorActivity"
        android:paddingBottom="@dimen/dp_10"
        android:focusableInTouchMode="true"
        android:isScrollContainer="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Light">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|enterAlways">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/toolbarlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linearLayout_ad_container_ques_det"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/toolbar"
                            layout="@layout/toolbar_layout" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbarlayout"
                        android:background="@color/colorPrimaryNew"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:padding="@dimen/dp_15"
                            android:text="Filter Your Errors"
                            android:textSize="@dimen/text_titlebar"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/linearlayout18"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_2">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/make_choice_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingLeft="@dimen/dp_17"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingRight="@dimen/dp_17"
                                    android:paddingBottom="@dimen/dp_10"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <LinearLayout
                                        android:id="@+id/linearlayout10"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:weightSum="4"
                                        app:layout_constraintBottom_toTopOf="@+id/llMakeChoice"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">


                                        <RelativeLayout
                                            android:id="@+id/relativelayout10"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="3.3"
                                            android:background="@drawable/bg_ash_border">

                                            <TextView
                                                android:id="@+id/textView7"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="15dp"
                                                android:layout_marginTop="12dp"
                                                android:layout_marginEnd="15dp"
                                                android:layout_marginBottom="12dp"
                                                android:lineSpacingExtra="9sp"
                                                android:text="Make Your Choice"
                                                android:textColor="#000000"
                                                android:textSize="18sp" />


                                            <ImageView
                                                android:id="@+id/ivDropdownArrow"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerInParent="true"
                                                android:layout_marginEnd="@dimen/dp_40"
                                                android:src="@drawable/ic_down_arrow_black_png" />


                                        </RelativeLayout>

                                        <ImageView
                                            android:layout_width="0dp"
                                            android:layout_height="@dimen/dp_30"
                                            android:layout_gravity="center"
                                            android:layout_weight=".7"
                                            android:src="@drawable/ic_rounded_add" />

                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/llMakeChoice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_16"
                                        android:orientation="vertical"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="parent">


                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/dp_5"
                                            android:layout_marginBottom="15dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:weightSum="3">


                                                <RelativeLayout
                                                    android:id="@+id/relativeLayoutSubject"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="2.54"
                                                    android:background="@drawable/bg_ash_border">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal">

                                                        <androidx.appcompat.widget.AppCompatSpinner
                                                            android:id="@+id/spSubject"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="@dimen/dp_40"
                                                            android:layout_marginEnd="@dimen/dp_3"
                                                            android:layout_weight="1"
                                                            android:background="@android:color/transparent"
                                                            android:pointerIcon="none" />

                                                        <ImageView
                                                            android:id="@+id/subject_icon"
                                                            android:layout_width="wrap_content"
                                                            android:layout_height="wrap_content"
                                                            android:layout_alignParentRight="true"
                                                            android:layout_centerInParent="true"
                                                            android:layout_gravity="center_vertical"
                                                            android:layout_marginEnd="@dimen/dp_15"
                                                            android:src="@drawable/ic_down_arrow_black_png" />

                                                    </LinearLayout>

                                                </RelativeLayout>


                                            </LinearLayout>

                                            <RelativeLayout
                                                android:id="@+id/showSectionlayout"
                                                android:layout_width="@dimen/dp_34"
                                                android:layout_height="@dimen/dp_34"
                                                android:layout_centerVertical="true"
                                                android:background="@drawable/bg_circle_grey"
                                                android:layout_alignParentRight="true">

                                                <ImageView
                                                    android:id="@+id/imageViewFilterToggle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:visibility="visible"
                                                    android:layout_margin="@dimen/dp_12"
                                                    app:srcCompat="@drawable/ic_plus" />

                                            </RelativeLayout>

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/spSectionlayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dp_50"
                                            android:layout_marginBottom="15dp"
                                            android:background="@drawable/bg_ash_border"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <androidx.appcompat.widget.AppCompatSpinner
                                                    android:id="@+id/spSection"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="@dimen/dp_40"
                                                    android:layout_marginEnd="@dimen/dp_3"
                                                    android:layout_weight="1"
                                                    android:background="@android:color/transparent"
                                                    android:pointerIcon="none" />

                                                <ImageView
                                                    android:id="@+id/section_icon"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_centerInParent="true"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginEnd="@dimen/dp_15"
                                                    android:src="@drawable/ic_down_arrow_black_png" />

                                            </LinearLayout>

                                        </RelativeLayout>

                                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/spTopicLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/dp_50"
                                            android:layout_marginBottom="15dp"
                                            android:background="@drawable/bg_ash_border"
                                            android:visibility="gone">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <androidx.appcompat.widget.AppCompatSpinner
                                                    android:id="@+id/spTopic"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="@dimen/dp_40"
                                                    android:layout_marginEnd="@dimen/dp_3"
                                                    android:layout_weight="1"
                                                    android:background="@android:color/transparent"
                                                    android:pointerIcon="none" />

                                                <ImageView
                                                    android:id="@+id/topic_icon"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_alignParentRight="true"
                                                    android:layout_centerInParent="true"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginEnd="@dimen/dp_15"
                                                    android:src="@drawable/ic_down_arrow_black_png" />

                                            </LinearLayout>
                                        </RelativeLayout>


                                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="15dp"
                                            android:background="@drawable/bg_calender_layout"
                                            android:visibility="gone">

                                            <androidx.appcompat.widget.AppCompatSpinner
                                                android:id="@+id/spBatch"
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp" />

                                        </RelativeLayout>

                                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="15dp"
                                            android:background="@drawable/bg_calender_layout"
                                            android:visibility="gone">

                                            <androidx.appcompat.widget.AppCompatSpinner
                                                android:id="@+id/spDifficulty"
                                                android:layout_width="match_parent"
                                                android:layout_height="40dp" />

                                        </RelativeLayout>

                                        <Button
                                            android:id="@+id/btnMakeChoice"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/btn_size"
                                            android:layout_gravity="right"
                                            android:layout_marginBottom="5dp"
                                            android:background="@drawable/bg_btn_accent"
                                            android:fontFamily="@font/poppins_bold"
                                            android:text="Go"
                                            android:textAllCaps="false"
                                            android:minHeight="0dp"
                                            android:padding="@dimen/dp_10"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/buttontextsize" />

                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </RelativeLayout>


                        </LinearLayout>


                        <!--            <RelativeLayout-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="0dp"-->
                        <!--                android:layout_weight="1"-->
                        <!--                android:paddingLeft="@dimen/dp_12"-->
                        <!--                android:paddingRight="@dimen/dp_12">-->

                        <!--                <TextView-->
                        <!--                    android:id="@+id/empty_message"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="match_parent"-->
                        <!--                    android:gravity="center"-->
                        <!--                    android:text="No Data Found"-->
                        <!--                    android:visibility="gone" />-->

                        <!--                <androidx.recyclerview.widget.RecyclerView-->
                        <!--                    android:id="@+id/rv_error_questions"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="match_parent"-->
                        <!--                    tools:listitem="@layout/item_view_solutions_question" />-->

                        <!--            </RelativeLayout>-->


                        <!--            <ProgressBar-->
                        <!--                android:id="@+id/loading_progress_bar"-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="20dp"-->
                        <!--                android:layout_marginTop="10dp"-->
                        <!--                android:visibility="gone" />-->

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightAsh"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <TextView
                    android:id="@+id/empty_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_150"
                    android:gravity="center"
                    android:text="No Data Found"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_error_questions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_18"
                    android:visibility="visible"
                    tools:listitem="@layout/item_view_solutions_question" />

            </RelativeLayout>


            <ProgressBar
                android:id="@+id/loading_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
