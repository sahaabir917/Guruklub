<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.termsAndCondition.TermsConditionActivity">

        <include  android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/subject_performance_recview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cardview_gradient"
                tools:itemCount="40"
                tools:listitem="@layout/item_subject_performance"

                />

        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>