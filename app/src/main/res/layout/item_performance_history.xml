<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_performance_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgperformancehistory">

            <LinearLayout
                android:id="@+id/basicPerformanceInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvPerformanceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="8sp"
                    android:text="Super Performance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium" />


                <TextView
                    android:id="@+id/tvPerformanceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="03 April, 2020"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_very_small" />

                <View
                    android:id="@+id/view10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/white" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/scorerlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_2"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/basicPerformanceInfo"
                app:layout_constraintStart_toStartOf="@id/basicPerformanceInfo"
                app:layout_constraintTop_toBottomOf="@id/basicPerformanceInfo">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvTotalQuestion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:lineSpacingExtra="7sp"
                        android:text="Total Questions : 20"
                        android:textColor="@color/newwhite"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/tvAnswered"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:lineSpacingExtra="7sp"
                        android:text="Questions Answered : 19"
                        android:textColor="@color/newwhite"
                        android:textSize="11sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvCorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="7sp"
                    android:text="Correct Answer : 19"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <TextView
                        android:id="@+id/tvPerformanceScore"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/bg_btn_white"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="6sp"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_7"
                        android:paddingRight="@dimen/dp_20"
                        android:paddingBottom="@dimen/dp_7"
                        android:text="19/20"
                        android:textAlignment="center"
                        android:textColor="@color/deepblack"
                        android:textSize="@dimen/buttontextsize"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_weight="1.7"
                        android:gravity="center"
                        android:text="Tap On View Details"
                        android:textColor="@color/yellow500"
                        android:textSize="@dimen/text_very_small" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>