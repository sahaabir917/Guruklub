            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/question_details_viewerpager"/>


        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout_ad_container_ques_det"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    app:srcCompat="@drawable/ic_comment" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="0 Comments"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/view_all_comments"
                    android:textColor="@color/darkAsh"
                    android:textSize="@dimen/text_small"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_8"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/bg_rounded_comment_outlined">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_30"
                        android:background="@null"
                        android:hint="Write a comment"
                        android:textColorHint="@color/darkAsh"
                        android:textSize="@dimen/text_small" />

                    <ImageButton
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_submit_comment" />


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_ad_container_ques_det"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <View
                android:id="@+id/viewBorderTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:background="@color/colorPrimary"
                android:clickable="false" />


            <RelativeLayout
                android:id="@+id/rlAdContainerQuesDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">


            </RelativeLayout>

            <TextView
                android:id="@+id/add_space_ques_det"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/rlAdContainerQuesDet"
                android:layout_marginBottom="@dimen/dp_8"
                android:clickable="false"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/sp_11"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/relativeLayout_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@color/lightGreen"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_24"
                android:rotation="90"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/lightGreen"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_24"
                android:rotation="270"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/viewBorderBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:clickable="false" />


    </RelativeLayout>

</layout>