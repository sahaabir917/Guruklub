<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.activity.library.LibraryActivity">

                <RelativeLayout
                    android:id="@+id/examTitlelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightAsh"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/linearlayout15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_live_exam_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_5">


                            <TextView
                                android:id="@+id/points_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="28sp"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/newwhite"
                                android:textSize="@dimen/sp_24" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="2dp"
                            android:text="Lorem lpsum simply dummy text of the ."
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:visibility="gone" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/top_section_cv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/colorPrimaryNew"
                            app:cardCornerRadius="@dimen/dp_40"
                            app:cardElevation="0dp"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/examTitlelayout">

                            <LinearLayout
                                android:id="@+id/linearLayout4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:gravity="center_vertical"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".9"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical">


                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:id="@+id/play_pause_btn"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerInParent="true"
                                                android:src="@drawable/ic_total_spent_time_png" />

                                        </RelativeLayout>


                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/overall_time_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_3"
                                        android:layout_gravity="center_vertical"
                                        android:lineSpacingExtra="9sp"
                                        android:textColor="@color/newwhite"
                                        android:textSize="@dimen/sp_10"
                                        tools:text="" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1.1"
                                    android:layout_marginStart="@dimen/dp_3"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">


                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">


                                        </RelativeLayout>

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/ic_participate_date_clock_png" />

                                    </RelativeLayout>


                                    <TextView
                                        android:id="@+id/date_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/dp_3"
                                        android:textSize="@dimen/sp_10"
                                        android:lineSpacingExtra="2sp"
                                        android:textColor="@color/white"


                                        />

                                </LinearLayout>


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="2"
                                    android:lineSpacingExtra="9sp"
                                    android:text="Answered"
                                    android:textAlignment="textEnd"
                                    android:textColor="#3f51b5"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearlayout15"
                        android:background="@color/colorPrimary">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_tab_live_exam"
                            android:paddingTop="@dimen/dp_5">


                            <TextView
                                android:id="@+id/view_solution_tv"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/btn_size"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="@dimen/dp_30"
                                android:layout_marginBottom="@dimen/dp_16"
                                android:background="@drawable/bg_btn_accent"
                                android:lineSpacingExtra="16sp"
                                android:padding="@dimen/dp_10"
                                android:textAllCaps="false"
                                android:paddingStart="20dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"
                                android:text="View Solutions"
                                android:textAlignment="center"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/sp_14" />


                            <!--              view solution     -->

                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/lightAsh"
                    android:fillViewport="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/examTitlelayout">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent">


                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/total_question_no_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/cardView8">

                        </TextView>


                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/result_pie_chart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_271"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/total_question_no_tv" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewTestInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:background="@drawable/bg_outline_primary_rounded"
                            android:clipToPadding="true"
                            android:padding="@dimen/dp_8"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/result_pie_chart"
                            app:layout_constraintVertical_bias="0.1">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp_8"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/dp_5"
                                    android:layout_marginRight="@dimen/dp_5"
                                    app:srcCompat="@drawable/ic_unanswered" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="This is a Topic exam. This exam is aimed to evaluate your performance in a specific topic. The score of this exam will not effect your overall performance."
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/text_primary" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/performance_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/performance_spinner_items"
                            android:padding="10dp"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/result_pie_chart" />


                        <LinearLayout
                            android:id="@+id/linearLayoutPerformanceList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/blue_3"
                            android:orientation="vertical"
                            app:layout_constraintTop_toBottomOf="@+id/performance_spinner">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/performance_list_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_24"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:text="Subject Based Performance"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/result_pie_chart" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/tablelayoutcolor1"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:layout_marginStart="@dimen/dp_13"
                                    android:lineSpacingExtra="@dimen/sp_17"
                                    android:text="Name "
                                    android:textColor="@color/newwhite"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />


                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.2" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:lineSpacingExtra="@dimen/sp_17"
                                    android:text="Success %"
                                    android:textColor="@color/newwhite"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.8"
                                    android:lineSpacingExtra="@dimen/sp_17"
                                    android:text="Average Time"
                                    android:textColor="@color/newwhite"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/sp_12"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/suggestion_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:lineSpacingExtra="17sp"
                                    android:text="Suggestions"
                                    android:textColor="#000000"
                                    android:textSize="@dimen/sp_12"
                                    android:visibility="gone" />

                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/performance_rec_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                tools:itemCount="4"
                                tools:listitem="@layout/item_subject_based_performance_short" />

                            <TextView
                                android:id="@+id/show_all_btn"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/btn_size"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginEnd="@dimen/dp_30"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/bg_btn_accent"
                                android:lineSpacingExtra="9sp"
                                android:padding="@dimen/dp_10"
                                android:paddingStart="30dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="30dp"
                                android:textAllCaps="false"
                                android:text="See All Details"
                                android:textColor="@drawable/primary_btn_text_color"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                />

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.core.widget.NestedScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </RelativeLayout>


</layout>