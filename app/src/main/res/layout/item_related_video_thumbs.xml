<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_marginTop="@dimen/dp_15"
       android:layout_marginStart="@dimen/dp_1"
       android:layout_marginEnd="@dimen/dp_1"
       android:paddingBottom="@dimen/dp_10"
       android:layout_height="wrap_content">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_204"
           app:cardCornerRadius="@dimen/dp_5"
           app:cardElevation="@dimen/dp_5">


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:id="@+id/imageViewYoutubeThumb"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   />

               <FrameLayout
                   android:id="@+id/framelayout2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/semi_transparent" />



               <ImageView
                   android:id="@+id/play_pause_button"
                   android:layout_width="@dimen/dp_72"
                   android:layout_height="@dimen/dp_72"
                   android:layout_gravity="center"
                   android:tint="@color/white"
                   android:layout_centerInParent="true"
                   app:srcCompat="@drawable/ic_play_png_icon"
                   android:text="Play" />


           </RelativeLayout>


           <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
               android:id="@+id/youtube_player_view_thumb"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="gone" />



       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:id="@+id/videodescriptionlayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/dp_20"
           android:background="@drawable/bg_plainwhite"
           >

           <TextView
               android:id="@+id/video_title1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/dp_5"
               android:textSize="12sp"
               android:textColor="@color/newwhite" />

       </LinearLayout>


   </LinearLayout>




</layout>