<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/relativeLayout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/textViewQuickExam"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:textAllCaps="false"
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:includeFontPadding="false"
                        android:text="Quick Exam"
                        android:background="@drawable/bg_btn_ancent1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/textViewFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_28"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:includeFontPadding="false"
                        android:text="Custom Exam"
                        android:background="@drawable/bg_btn_ancent1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageView_custom_exam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/dp_5"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_options_png" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textView_model_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="MODEL TESTS"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dp_20"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout_top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/exam_slider_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_236"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_20"
                    app:layout_constraintTop_toBottomOf="@+id/textView_model_test">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPagerExam"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textViewNoQuickExam"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"
                        android:text="@string/no_exam_available_currently"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.rd.PageIndicatorView
                    android:id="@+id/examPagerPageIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/start_game_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exam_slider_layout"
                    app:piv_animationType="worm"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_padding="6dp"
                    app:piv_radius="4dp"
                    app:piv_selectedColor="@color/colorAccent"
                    app:piv_unselectedColor="@color/grey"
                    app:piv_viewPager="@id/viewPagerExam" />

                <TextView
                    android:id="@+id/start_game_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginStart="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginEnd="@dimen/dp_18"
                    android:background="@drawable/bg_btn_accent"
                    android:elevation="@dimen/dp_3"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:lineSpacingExtra="@dimen/sp_4"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_30"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="Start"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="#fafcfb"
                    android:textSize="@dimen/buttontextsize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/examPagerPageIndicatorView" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutBottomExamCentre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/lightAsh"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_game_tv">

                    <TextView
                        android:id="@+id/textView_live_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="LIVE EVENTS"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/dp_20"
                        app:layout_constraintBottom_toTopOf="@+id/relativeLayout_live_exam_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
