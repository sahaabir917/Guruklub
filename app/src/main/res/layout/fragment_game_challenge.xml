<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_5"
        tools:context=".view.dialog.gameLevel.GameChallengeDialog">


        <ImageView
            android:id="@+id/imageView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/chalange_page_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintBottom_toBottomOf="@id/imageView38"
            app:layout_constraintEnd_toEndOf="@id/imageView38"
            app:layout_constraintStart_toStartOf="@id/imageView38"
            app:layout_constraintTop_toTopOf="@+id/imageView38"
            app:layout_constraintVertical_bias="0.110">

            <ImageView
                android:id="@+id/headImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/rounded_red_bg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="-50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChallengeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Win 500"
                    android:textColor="@color/newwhite"
                    android:textSize="@dimen/sp_22"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView39"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginStart="@dimen/dp_40"
                    android:adjustViewBounds="true"
                    android:src="@drawable/lifewithoutplus" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_25"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="@+id/imageView38"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView38"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icvUserIcon"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/ic_placeholder_user" />

            <TextView
                android:id="@+id/tvChallengeSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/dp_5"
                android:textAlignment="textStart"
                android:textColor="@color/gamescreentextcolor"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Abu Mohammand abdullah ibne, " />
        </LinearLayout>


        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_29"
            android:text="@string/a_challenge_is_waiting_for_you"
            android:textAlignment="textStart"
            android:textColor="@color/gamescreentextcolor"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toTopOf="@+id/imageView41"
            app:layout_constraintEnd_toEndOf="@+id/heading"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/heading"
            app:layout_constraintTop_toBottomOf="@+id/heading" />

        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:src="@drawable/chalange_page_deep_blue_box"
            app:layout_constraintBottom_toTopOf="@+id/rlBottom"
            app:layout_constraintEnd_toEndOf="@+id/imageView38"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/imageView38"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Challenge Details"
            android:textColor="@color/newwhite"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_40"
            app:layout_constraintBottom_toBottomOf="@+id/imageView41"
            app:layout_constraintStart_toStartOf="@+id/imageView41"
            app:layout_constraintTop_toTopOf="@+id/imageView41"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvChallengeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="12dp"
            android:text="Target Score : "
            android:textColor="@color/gamescreentextcolor"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toStartOf="@+id/textView24"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />


        <TextView
            android:id="@+id/tvTargetScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gamescreentextcolor"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toEndOf="@+id/textView24"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/tvChallengeDetails"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            tools:text="100" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView41"
            app:layout_constraintStart_toStartOf="@+id/tvChallengeDetails"
            app:layout_constraintTop_toBottomOf="@+id/tvChallengeDetails"
            app:layout_constraintVertical_bias="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time : "
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_13"
                tools:text="00:50:00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions : "
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tvQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_14"
                tools:text="50" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout12"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
            app:layout_constraintVertical_bias="0.05">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonus Hearts : "
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tvBonusHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gamescreentextcolor"
                android:textSize="@dimen/sp_14"
                tools:text="1000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:src="@drawable/game_life_png" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView41"
            app:layout_constraintStart_toStartOf="@+id/linearLayout13"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

            <TextView
                android:id="@+id/tvKnowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/know_more"
                android:textColor="@color/newwhite"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:color="@color/newwhite" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlBottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imageView38"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@+id/imageView41"
            app:layout_constraintVertical_bias="0.0">

            <RelativeLayout
                android:id="@+id/rlTake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/yellow_box_with_colorfull_bg" />

                <TextView
                    android:id="@+id/tvTakeChallenge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_bold"
                    android:shadowColor="@color/newGray"
                    android:shadowDx="4"
                    android:shadowDy="6"
                    android:padding="@dimen/dp_8"
                    android:shadowRadius="10"
                    android:text="Take Challenge"
                    android:textColor="@color/newwhite"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlTake"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/yellow_box_with_colorfull_bg" />

                <TextView
                    android:id="@+id/tvNotNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_bold"
                    android:shadowColor="@color/newGray"
                    android:shadowDx="4"
                    android:shadowDy="6"
                    android:padding="@dimen/dp_10"
                    android:shadowRadius="10"
                    android:text="Not Now"
                    android:textColor="@color/newwhite"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />
            </RelativeLayout>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

