<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.friendrequest.MyFriendFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_my_friend"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_my_friend"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbVertical="@drawable/game_scrolbar_thumb"
            android:scrollbars="vertical"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/no_pending_request_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Friends"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/gamepageusertitlecolor"
            android:textAlignment="center"
            android:visibility="gone"
            android:gravity="center_vertical"/>

    </LinearLayout>

</layout>

